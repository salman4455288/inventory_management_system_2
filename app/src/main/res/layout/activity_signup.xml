<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F0F8"
    android:padding="0dp">

    <!-- Top Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E8F0F8" />

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <!-- Logo Section -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#D4A574"
                android:elevation="4dp" />

        </FrameLayout>

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi"
            android:textSize="26sp"
            android:textColor="#1C3A47"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="3dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Inventory &amp; POS System"
            android:textSize="12sp"
            android:textColor="#7A8A99"
            android:layout_marginBottom="22dp" />

        <!-- Sign Up Card -->
        <LinearLayout
            android:id="@+id/signupcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="10dp">

            <!-- Tab Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:elevation="2dp"
                android:background="@drawable/tab_container_background"
                android:layout_marginBottom="25dp">



                <Button
                    android:id="@+id/signup_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Login"
                    android:textColor="#7A8A99"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#ECECF0"
                    android:stateListAnimator="@null" />
                <Button
                    android:id="@+id/login_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Sign Up"
                    android:textColor="#1C3A47"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:stateListAnimator="@null" />

            </LinearLayout>


            <!-- Full Name Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <!-- Full Name Input -->
            <EditText
                android:id="@+id/fullname_input"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:hint="Enter your full name"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textColorHint="#A5B3BE"
                android:paddingStart="14dp"
                android:paddingEnd="10dp"
                android:background="@drawable/input_field_background"
                android:layout_marginBottom="10dp"
                android:inputType="text" />

            <!-- Business Name Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Business Name"
                android:textColor="#1C3A47"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Business Name Input -->
            <EditText
                android:id="@+id/business_input"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:hint="Enter your business name"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textColorHint="#A5B3BE"
                android:paddingStart="14dp"
                android:paddingEnd="10dp"
                android:background="@drawable/input_field_background"
                android:layout_marginBottom="15dp"
                android:inputType="text" />

            <!-- Phone Number Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <!-- Phone Number Input -->
            <EditText
                android:id="@+id/phone_input"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:hint="Enter your phone number"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textColorHint="#A5B3BE"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/input_field_background"
                android:layout_marginBottom="10dp"
                android:inputType="phone" />

            <!-- Email Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:hint="Enter your email"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textColorHint="#A5B3BE"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/input_field_background"
                android:layout_marginBottom="10dp"
                android:inputType="textEmailAddress" />

            <!-- Password Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:hint="Create a password"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textColorHint="#A5B3BE"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:background="@drawable/input_field_background"
                android:layout_marginBottom="12dp"
                android:inputType="textPassword" />

            <!-- Create Account Button -->
            <Button
                android:id="@+id/create_account_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Create Account"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/signin_button_background"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>