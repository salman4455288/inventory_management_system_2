<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#374151" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="Add Product"
            android:textColor="#111827"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Image Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Image"
                    android:textColor="#111827"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/dashed_border">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgProduct"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@android:drawable/ic_menu_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Upload product image"
                            android:textColor="#9CA3AF"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/btnChooseImage"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/rounded_gray_button"
                            android:paddingHorizontal="20dp"
                            android:text="Choose Image"
                            android:textAllCaps="false"
                            android:textColor="#111827"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Basic Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:textColor="#111827"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Product Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Product Name *"
                    android:textColor="#374151"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etProductName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:hint="Enter product name"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textSize="14sp" />

                <!-- SKU -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="SKU *"
                    android:textColor="#374151"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etSku"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext_bg"
                        android:hint="Product"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnGenerate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/rounded_gray_button"
                        android:minWidth="0dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Generate"
                        android:textAllCaps="false"
                        android:textColor="#111827"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Barcode -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Barcode"
                    android:textColor="#374151"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etBarcode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext_bg"
                        android:hint="Scan or enter barcode"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btnScanBarcode"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/rounded_gray_button"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_camera" />
                </LinearLayout>

                <!-- Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Category *"
                    android:textColor="#374151"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Description"
                    android:textColor="#374151"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:gravity="top|start"
                    android:hint="Product description (optional)"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Pricing Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pricing"
                    android:textColor="#111827"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Cost Price and Selling Price Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <!-- Cost Price -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cost Price *"
                            android:textColor="#374151"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/etCostPrice"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/rounded_edittext_bg"
                            android:hint="0"
                            android:inputType="numberDecimal"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Selling Price -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selling Price *"
                            android:textColor="#374151"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/etSellingPrice"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_edittext_bg"
                            android:hint="0"
                            android:inputType="numberDecimal"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Inventory Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventory"
                    android:textColor="#111827"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Current Stock and Minimum Stock Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <!-- Current Stock -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Stock *"
                            android:textColor="#374151"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/etCurrentStock"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/rounded_edittext_bg"
                            android:hint="0"
                            android:inputType="number"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Minimum Stock -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimum Stock *"
                            android:textColor="#374151"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/etMinStock"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/rounded_edittext_bg"
                            android:hint="10"
                            android:inputType="number"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Supplier -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Supplier"
                    android:textColor="#374151"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinnerSupplier"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnSaveProduct"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_primary_button"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="Save Product"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_white_button"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#111827"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>