<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="0dp"
    android:backgroundTint="#EBF2FF"
    >

    <!-- Top Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E8F0F8" />

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/login_card_background"
        android:backgroundTint="#EBF2FF"
        >

        <!-- Logo Section -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="#D4A574"
                android:elevation="4dp" />

        </FrameLayout>

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RetailPOS"
            android:textSize="28sp"
            android:textColor="#1C3A47"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Inventory &amp; POS System"
            android:textSize="13sp"
            android:textColor="#7A8A99"
            android:layout_marginBottom="30dp" />

        <!-- Login Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="25dp"
            android:elevation="6dp" >
            >

            <!-- Tab Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@drawable/tab_container_background"
                android:elevation="2dp"
                android:layout_marginBottom="25dp">

                <Button
                    android:id="@+id/login_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Login"
                    android:textColor="#1C3A47"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/white"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/signup_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Sign Up"
                    android:textColor="#7A8A99"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#ECECF0"
                    android:stateListAnimator="@null" />

            </LinearLayout>

            <!-- Email/Phone Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email or Phone"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Email/Phone Input -->
            <EditText
                android:id="@+id/email_phone_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your email or phone"
                android:textSize="13sp"
                android:textColor="#1C3A47"
                android:textColorHint="#A5B3BE"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/input_field_background"
                android:layout_marginBottom="18dp"
                android:inputType="text" />

            <!-- Password Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="12sp"
                android:textColor="#1C3A47"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your password"
                android:textSize="13sp"
                android:textColor="#1C3A47"
                android:textColorHint="#A5B3BE"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/input_field_background"
                android:layout_marginBottom="25dp"
                android:inputType="textPassword" />

            <!-- Sign In Button -->
            <Button
                android:id="@+id/signin_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Sign In"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/signin_button_background"

                android:layout_marginBottom="18dp"
                />

            <!-- Forgot Password Link -->
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textSize="13sp"
                android:textColor="#5B7A91"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>