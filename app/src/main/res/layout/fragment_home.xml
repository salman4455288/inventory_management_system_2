<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@drawable/card_background">
    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp">

        <!-- Greeting and Menu Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning, Admin"
                    android:textSize="18sp"
                    android:textColor="#1C3A47"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday, Dec 30, 2024"
                    android:textSize="12sp"
                    android:textColor="#7A8A99" />

            </LinearLayout>

            <!-- Menu Button -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/menu_button_background">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#000000"
                    android:elevation="2dp" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Today's Sales Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:layout_marginEnd="8dp"
                    android:elevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today's Sales"
                            android:textSize="12sp"
                            android:textColor="#7A8A99" />


                        <ImageView
                            android:id="@+id/stock"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/stock_img"
                            android:background="#4CAF50"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$2,450"
                        android:textSize="22sp"
                        android:textColor="#1C3A47"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+12%"
                        android:textSize="11sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Total Stock Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:layout_marginStart="8dp"
                    android:elevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Stock"
                            android:textSize="12sp"
                            android:textColor="#7A8A99" />

                        <ImageView
                            android:id="@+id/package_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/package_img"
                            android:background="#2196F3"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,247"
                        android:textSize="22sp"
                        android:textColor="#1C3A47"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Items"
                        android:textSize="11sp"
                        android:textColor="#2196F3"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Second Row Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Low Stock Alerts Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:layout_marginEnd="8dp"
                    android:elevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Low Stock Alerts"
                            android:textSize="12sp"
                            android:textColor="#7A8A99" />


                        <ImageView
                            android:id="@+id/warning_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/warning_img"
                            android:background="#FF9800"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="22sp"
                        android:textColor="#1C3A47"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Items"
                        android:textSize="11sp"
                        android:textColor="#FF9800"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Today's Expenses Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="14dp"
                    android:layout_marginStart="8dp"
                    android:elevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today's Expenses"
                            android:textSize="12sp"
                            android:textColor="#7A8A99" />



                        <ImageView
                            android:id="@+id/money_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/money_img"
                            android:background="#E53935"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$320"
                        android:textSize="22sp"
                        android:textColor="#1C3A47"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expenses"
                        android:textSize="11sp"
                        android:textColor="#E53935"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Quick Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="14sp"
                android:textColor="#1C3A47"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Quick Actions Grid - Single Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:elevation="1dp">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- POS Button -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">


                        <ImageView
                            android:id="@+id/pos_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/pos_img"
                            android:background="#4CAF50"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POS"
                            android:textSize="12sp"
                            android:textColor="#1C3A47"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Inventory Button -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/package_img2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/package_img"
                            android:background="#2196F3"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inventory"
                            android:textSize="12sp"
                            android:textColor="#1C3A47"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Customers Button -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/customer_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="#9C27B0"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/customer_img"
                            android:elevation="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customers"
                            android:textSize="12sp"
                            android:textColor="#1C3A47"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Suppliers Button -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/supplier_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/supplier_img"
                            android:background="#FF9800"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suppliers"
                            android:textSize="12sp"
                            android:textColor="#1C3A47"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Reports Button -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">


                        <ImageView
                            android:id="@+id/report_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/report_img"
                            android:background="#673AB7"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reports"
                            android:textSize="12sp"
                            android:textColor="#1C3A47"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Expenses Button -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/money_img2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/money_img"
                            android:background="#E53935"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expenses"
                            android:textSize="12sp"
                            android:textColor="#1C3A47"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Recent Transactions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Transactions"
                android:textSize="14sp"
                android:textColor="#1C3A47"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Transactions Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:elevation="1dp">

                <!-- Transactions RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/transactions_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <!-- Home Nav -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?selectableItemBackground">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#7A8A99"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:textColor="#7A8A99" />

        </LinearLayout>

        <!-- POS Nav -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?selectableItemBackground">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#7A8A99"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POS"
                android:textSize="10sp"
                android:textColor="#7A8A99" />

        </LinearLayout>

        <!-- Inventory Nav -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?selectableItemBackground">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#7A8A99"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory"
                android:textSize="10sp"
                android:textColor="#7A8A99" />

        </LinearLayout>

        <!-- Customers Nav -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?selectableItemBackground">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#7A8A99"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customers"
                android:textSize="10sp"
                android:textColor="#7A8A99" />

        </LinearLayout>

        <!-- Reports Nav -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?selectableItemBackground">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#7A8A99"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textSize="10sp"
                android:textColor="#7A8A99" />

        </LinearLayout>

        <!-- Settings Nav -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?selectableItemBackground">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#7A8A99"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="10sp"
                android:textColor="#7A8A99" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>